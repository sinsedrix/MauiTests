<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:MauiTabbedDI.ViewModels"
             xmlns:m="clr-namespace:MauiTabbedDI.Models"
             x:Class="MauiTabbedDI.Pages.LabelPage"
             x:DataType="vm:LabelVm"
             Title="{Binding Title}">
    
    <VerticalStackLayout x:DataType="vm:LabelVm">
        <Label 
            Text="A label page"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Label 
            Text="{Binding Label.Text}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        
        <Label 
            Text="{Binding Origin}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>