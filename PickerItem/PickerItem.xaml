<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PickerItem.PickerItem"
             xmlns:local="clr-namespace:PickerItem"
             x:DataType="local:PickerItem"
             x:Name="me">
    <Frame HeightRequest="50" CornerRadius="6" Padding="4" Margin="2,2,2,0"
           BackgroundColor="{StaticResource Tertiary}" BorderColor="{StaticResource Secondary}">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Image Grid.Column="0" Source="{Binding Icon}" Margin="4" />
            <Label x:Name="LblText" Text="{Binding Text}" Grid.Column="1" TextColor="{StaticResource White}" FontSize="16" VerticalTextAlignment="Center" />
            <Picker x:Name="InnerPicker" Grid.Column="2" 
                    ItemsSource="{Binding ItemsSource}"
                    SelectedItem="{Binding SelectedItem}" 
                    WidthRequest="400" />
        </Grid>
    </Frame>

</ContentView>
